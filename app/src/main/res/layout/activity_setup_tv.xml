<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:padding="48dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IOCast Setup"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indtast kunde-kode med fjernbetjening"
        android:textColor="#888888"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Code Display -->
    <TextView
        android:id="@+id/codeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="____"
        android:textColor="#00d4ff"
        android:textSize="72sp"
        android:fontFamily="monospace"
        android:letterSpacing="0.3"
        android:background="@drawable/code_display_bg"
        android:paddingHorizontal="48dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Numpad Grid -->
    <GridLayout
        android:id="@+id/numpadGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/codeDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <!-- Row 1: 1, 2, 3 -->
        <Button
            android:id="@+id/btn1"
            style="@style/NumpadButton"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            style="@style/NumpadButton"
            android:text="2"/>
        <Button
            android:id="@+id/btn3"
            style="@style/NumpadButton"
            android:text="3"/>

        <!-- Row 2: 4, 5, 6 -->
        <Button
            android:id="@+id/btn4"
            style="@style/NumpadButton"
            android:text="4"/>
        <Button
            android:id="@+id/btn5"
            style="@style/NumpadButton"
            android:text="5"/>
        <Button
            android:id="@+id/btn6"
            style="@style/NumpadButton"
            android:text="6"/>

        <!-- Row 3: 7, 8, 9 -->
        <Button
            android:id="@+id/btn7"
            style="@style/NumpadButton"
            android:text="7"/>
        <Button
            android:id="@+id/btn8"
            style="@style/NumpadButton"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            style="@style/NumpadButton"
            android:text="9"/>

        <!-- Row 4: ←, 0, ✓ -->
        <Button
            android:id="@+id/btnBackspace"
            style="@style/NumpadButton"
            android:text="←"
            android:textSize="28sp"/>
        <Button
            android:id="@+id/btn0"
            style="@style/NumpadButton"
            android:text="0"/>
        <Button
            android:id="@+id/btnConfirm"
            style="@style/NumpadButton"
            android:text="✓"
            android:textSize="28sp"
            android:backgroundTint="#00d4ff"/>

    </GridLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tryk på tal-knapper eller naviger med D-pad"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/numpadGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Loading Spinner (hidden by default) -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/loadingSpinner"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:indeterminateTint="#00d4ff"/>

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forbinder..."
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <!-- Waiting for Approval (hidden by default) -->
    <LinearLayout
        android:id="@+id/waitingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏳"
            android:textSize="64sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venter på godkendelse"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/waitingDeviceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device: iocast-xxxxxxxx"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/waitingCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kunde: ..."
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kontakt administrator for at godkende"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
