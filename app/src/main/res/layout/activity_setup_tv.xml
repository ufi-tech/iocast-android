<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IOCast Setup"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indtast kunde-kode med fjernbetjening"
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Code Display -->
        <TextView
            android:id="@+id/codeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="____"
            android:textColor="#00d4ff"
            android:textSize="56sp"
            android:fontFamily="monospace"
            android:letterSpacing="0.3"
            android:background="@drawable/code_display_bg"
            android:paddingHorizontal="32dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Numpad Grid - Compact version -->
        <GridLayout
            android:id="@+id/numpadGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            app:layout_constraintTop_toBottomOf="@id/codeDisplay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <!-- Row 1: 1, 2, 3 -->
            <Button
                android:id="@+id/btn1"
                style="@style/NumpadButtonCompact"
                android:text="1"/>
            <Button
                android:id="@+id/btn2"
                style="@style/NumpadButtonCompact"
                android:text="2"/>
            <Button
                android:id="@+id/btn3"
                style="@style/NumpadButtonCompact"
                android:text="3"/>

            <!-- Row 2: 4, 5, 6 -->
            <Button
                android:id="@+id/btn4"
                style="@style/NumpadButtonCompact"
                android:text="4"/>
            <Button
                android:id="@+id/btn5"
                style="@style/NumpadButtonCompact"
                android:text="5"/>
            <Button
                android:id="@+id/btn6"
                style="@style/NumpadButtonCompact"
                android:text="6"/>

            <!-- Row 3: 7, 8, 9 -->
            <Button
                android:id="@+id/btn7"
                style="@style/NumpadButtonCompact"
                android:text="7"/>
            <Button
                android:id="@+id/btn8"
                style="@style/NumpadButtonCompact"
                android:text="8"/>
            <Button
                android:id="@+id/btn9"
                style="@style/NumpadButtonCompact"
                android:text="9"/>

            <!-- Row 4: ←, 0, ✓ -->
            <Button
                android:id="@+id/btnBackspace"
                style="@style/NumpadButtonCompact"
                android:text="←"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/btn0"
                style="@style/NumpadButtonCompact"
                android:text="0"/>
            <Button
                android:id="@+id/btnConfirm"
                style="@style/NumpadButtonCompact"
                android:text="✓"
                android:textSize="24sp"
                android:backgroundTint="#00d4ff"/>

        </GridLayout>

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tryk OK når koden er indtastet"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/numpadGrid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Loading Spinner (hidden by default) -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ProgressBar
                android:id="@+id/loadingSpinner"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="#00d4ff"/>

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forbinder..."
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

        <!-- Waiting for Approval (hidden by default) -->
        <LinearLayout
            android:id="@+id/waitingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏳"
                android:textSize="48sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venter på godkendelse"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/waitingDeviceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device: iocast-xxxxxxxx"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/waitingCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kunde: ..."
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontakt administrator for at godkende"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
